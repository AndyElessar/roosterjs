{
    "compilerOptions": {
        "strict": true,
        "jsx": "react",
        "target": "es2024",
        "module": "commonjs",
        "outDir": "../dist",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "downlevelIteration": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "*": ["*"]
        },
        "rootDir": ".",
        "lib": ["ES2024", "dom"]
    },
    "include": ["./*/lib/**/*.ts", "./*/lib/**/*.tsx"]
}
